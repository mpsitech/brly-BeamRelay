include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DBRLYD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbsbrly -I$(BUILDROOT)/brlyd/VecBrly -I$(BUILDROOT)/brlyd/IexBrly -I$(BUILDROOT)/brlyd
INCPATH += -I${WHIZSDKROOT}/build -I/usr/include -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdBrlyUsg.o PnlBrlyUsgList.o QryBrlyUsgList.o PnlBrlyUsgHeadbar.o PnlBrlyUsgRec.o PnlBrlyUsgMNUser.o QryBrlyUsgMNUser.o PnlBrlyUsgAAccess.o QryBrlyUsgAAccess.o PnlBrlyUsgDetail.o

LIB = libcrdbrlyusg

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/brlyd/

clean:
	rm -f *.o
