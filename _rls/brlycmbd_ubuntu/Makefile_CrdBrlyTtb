include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DBRLYCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbsbrly -I$(BUILDROOT)/brlycmbd/VecBrly -I$(BUILDROOT)/brlycmbd/IexBrly -I$(BUILDROOT)/brlycmbd
INCPATH += -I${WHIZSDKROOT}/build -I/usr/include -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdBrlyTtb.o PnlBrlyTtbList.o QryBrlyTtbList.o PnlBrlyTtbHeadbar.o PnlBrlyTtbRec.o PnlBrlyTtbRef1NFile.o QryBrlyTtbRef1NFile.o PnlBrlyTtb1NFlight.o QryBrlyTtb1NFlight.o PnlBrlyTtbDetail.o DlgBrlyTtbNew.o DlgBrlyTtbImpflt.o DlgBrlyTtbTrlorig.o

LIB = libcrdbrlyttb

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/brlycmbd/

clean:
	rm -f *.o
